{% extends 'base.html.twig' %}

{% block body %}

<div class="container text-center">
    <div class="card" style="width: 80rem; margin: 0 auto">
        <img src="{{ asset('images/boutique/banniere-profil1.jpg') }}" alt="image profil" class="card-img-top"
            style="object-fit: contain;">
        <div class="alert alert-info">
            Ci-dessous vous trouverez vos informations personnelles
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr style="background: #000000; color: white;">
                        <th scope="col">Email</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Pr√©nom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Sexe</th>
                        <th scope="col">Date d'inscription</th>
                        <th scope="col">Editer</th>
                    </tr>
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.pseudo }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.civility }}</td>
                        <td>{{ user.createdAt | date('d/m/Y') }}</td>
                        <td><a href="" class="btn btn-primary"><i
                            class="fa-solid fa-pen-to-square"></i></a></td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center mt-2">
                <p class="mt-2">üí¨ En cas de mofification de vos donn√©es personnelles, vous devrez
                    choisir un nouveau mot de passe</p>
            </div>
        </div>
    </div>
    <div class="card mt-5" style="width: 80rem; margin: 0 auto">
        <img src="{{ asset('images/boutique/chaussure_homme.jpg') }}" alt="image profil" class="card-img-top"
            style="object-fit: contain;">
            <div class="alert alert-info">
                Ci-dessous vous trouverez l'historique de vos commandes
            </div>
        <div class="card-body mt-2">
            <table class="table table-bordered">
                <tbody>
                    <tr style="background: #000000; color: white;">
                        <th scope="col">Commande</th>
                        <th scope="col">Produit</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Prix Unitaire</th>
                        <th scope="col">Quantit√©</th>
                        <th scope="col">Total</th>
                        <th scope="col">Date</th>
                        <th scope="col">Statut</th>
                    </tr>
                    {% for commande in user.orders %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        {% for product in commande.product %}
                        <td>{{ product.title }}</td>
                        <td><img src="{{ asset('images/produits/' ~ product.image) }}" alt="photo du produit"
                                style="height: 100px; object-fit: contain;"></td>
                        <td>{{ product.price }} ‚Ç¨</td>
                        {% endfor %}
                        <td>{{ commande.quantity }}</td>
                        <td>{{ commande.total }}</td>
                        <td>{{ commande.createdAt | date('d/m/Y') }}</td>
                        <td>{{ commande.statut }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>



</div>


{% endblock %}